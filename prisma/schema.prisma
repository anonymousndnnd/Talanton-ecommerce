generator client {
  provider = "prisma-client-js"
  // Use the WASM engine to avoid shipping platform-specific query engine binaries.
  // WASM is portable across deployment targets (suitable for serverless platforms).
  engineType = "wasm"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Admin {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  username String
  email    String @unique
  password String
}

model Products {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  slug        String   @unique
  inventory   String
  description String
  price       String
  category    String
  lastUpdated DateTime @default(now())
}
