generator client {
  provider = "prisma-client-js"
  // Use the binary engine on Vercel to ensure the query engine binary is produced
  // (this avoids the library (.so.node) lookup issues on some deployments).
  engineType = "binary"
  // Keep the required binary targets (native + RHEL) â€” keep array on one line to avoid parser
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Admin {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  username String
  email    String @unique
  password String
}

model Products {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  slug        String   @unique
  inventory   String
  description String
  price       String
  category    String
  lastUpdated DateTime @default(now())
}
